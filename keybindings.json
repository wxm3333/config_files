// Place your key bindings in this file to overwrite the defaults
[
{ "key": "ctrl+j", "command": "workbench.action.terminal.focus"},
{ "key": "ctrl+k", "command": "workbench.action.focusActiveEditorGroup",
                   "when": "terminalFocus"},
{ "key": "ctrl+tab", "command": "workbench.action.nextEditor"},
{ "key": "ctrl+shift+tab", "command": "workbench.action.previousEditor"},
{ "key": "ctrl+h", "command": "workbench.view.explorer"},       
{ "key": "ctrl+m", "command": "workbench.action.maximizeEditor"},
{ "key": "ctrl+t", "command": "workbench.action.toggleMaximizedPanel"},
{
    "key": "alt+b",
    "command": "workbench.action.terminal.sendSequence",
    "args": { "text": "\u001bb" }
  },
  {
    "key": "alt+f",
    "command": "workbench.action.terminal.sendSequence",
    "args": { "text": "\u001bf" }
  },
{ "key": "alt+d", "command": "deleteWordEndRight"},
{ "key": "ctrl+l", "command": "workbench.action.terminal.clear",
    "when": "terminalFocus" },
]